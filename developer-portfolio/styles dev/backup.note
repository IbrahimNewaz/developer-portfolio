.skill-card {
  display: flex;
  gap: 24px;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  /* max-width: 1100px; */
  margin: 0 auto;
}
.skill-card-des {
  width: 300px;
  height: 380px;
  border-radius: 5px;
  border: 1px solid #ffffff;
  background-color: #ffffff;
  text-align: left;
  box-shadow: 5px 3px 3px 5px #18181810;
}

.skill-card-des img {
  width: 44px;
  height: 40px;
  /* padding: 30px 0 40px 27px; */

  margin: 0 auto;
  padding: 30px 0 40px 0;
}

.skill-titel {
  font-size: 20px;
  font-weight: bold;
  text-align: left;
  padding-bottom: 20px;

}

.skill-description {
  font-size: 16px;
  font-weight: 400;
  color: #757575;
  line-height: 28px;
  padding-bottom: 30px;
  margin-bottom: 30px;
  text-align: left;

}